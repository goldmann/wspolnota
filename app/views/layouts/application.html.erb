<!DOCTYPE html>
<html>
<head>
  <title>Wspolnota</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="menu">
  <ul>
    <li><%= link_to 'Strona główna', :controller => :root, :action => :index %></li>
    <li><%= link_to 'Lokatorzy', lodgers_url %></li>
    <li><%= link_to 'Lokale', apartments_url %></li>
    <li><%= link_to 'Stawki', rates_url %></li>
  </ul>
</div>

<% [:notice, :warning, :error].each do |key| %>
    <% if flash[key] %>
        <div class="<%= key %>" id="flash">
          <%= flash[key] %>
        </div>
    <% end %>
<% end %>

<div id="body">
  <%= yield %>
</div>

</body>
</html>
